.descCenter{
  display: flex;
  justify-content: flex-end;
  font-size: 28rpx;
  letter-spacing: 2rpx;
  color: #8c9aa8;
  margin-right: 15rpx;
  margin-top: 5rpx;
}
.editor-view {
  position: relative;
  background: white;
  color: black;
  width: 100%;
  min-height: 200rpx;
}

.editor {
  padding: 10px;
  height: auto;
  word-break: break-all;
  font-family: Consolas, Monaco, 'Andale Mono', 'Ubuntu Mono', monospace;
  color: transparent;
  caret-color: #ccc;
}

.ql-editor.ql-blank:before {
  color: #ccc;
}

.highlight {
  position: absolute;
  left: 10px;
  right: 10px;
  top: 10px;
}

.container {
  position: fixed;
  top: 50px; /* 根据实际情况调整 */
  left: 0;
  width: 100%;
  background-color: rgba(255, 255, 255, 0.8); /* 设置透明度 */
  z-index: 999;
}

.textarea {
  width: 90%;
  margin: 10px auto;
}

.rich-text {
  position: relative;
  top: 40px; /* 根据textarea高度调整 */
  padding: 10px;
}



